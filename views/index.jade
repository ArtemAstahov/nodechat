html(lang="en")
  head
    title nodechat
    script(type="text/javascript", src="/lib/jquery-1.5.1.js")
    script(type="text/javascript", src="/lib/underscore.js")
    script(type="text/javascript", src="/lib/backbone.js")
    script(type="text/javascript", src="http://cdn.socket.io/stable/socket.io.js")
    script(type="text/javascript", src="/models/models.js")
    script(type="text/javascript", src="/controllers/controllers.js")
    script(type="text/javascript", src="/views/views.js")
    script(type="text/javascript", src="/nodechat.js")
  body
    #heading
      h1 nodechat
    #content
      p 
        | connected clients
        span#client_count 0
      p
        label You are connect as: 
          = locals.name

      div
        | Secret Chat Messages
        div(style='width: 100%; float:left; overflow:hidden; word-wrap: break-word;')#direct_list

      div(style='float:left;width:40%')
        p
          | Fun Chat Messages
        div(style='margin-top:10px;width:100%;float:left;clear:both')#chat_list
        div(style='width: 40%; float:right; overflow:hidden; word-wrap: break-word;')#mashtag_list
      div(style='float:left;width:40%;clear:both;')
        form(method="post", action="#", onsubmit="return false")#messageForm
          p
            label Message: 
              input(type='text', name='message', size='140')
              input(type='submit', value='send')

